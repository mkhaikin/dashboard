<form >
    <input type="hidden" name="condoName" value="{{data.0.name}}">
    <div class="addform-group"  style="display:inline;">
        <div class="form-group" >
           <div class="iconlist" style="display:inline;">
            
            {{#each data}}
                {{#if this.picid}}
                    {{#compare this.picid "==" 1 }}
                        <div class="pic" style="display:inline;">
                    {{else}}
                        <div class="pic" style="display:none;">
                    {{/compare}}        
                <img src="{{this.icon}}" id="addpic{{this.picid}} " >   
                </div>                
                {{/if}}
            {{/each}}
           </div>

            <input type="text" required placeholder="Add notice " class="form-control" name="text">
            <!--
            <input type="text" required placeholder="Start date as YYYY-MM-DD hh:mm" class="form-control" name="start">
            <input type="text" required placeholder="End date as YYYY-MM-DD hh:mm" class="form-control" name="end">
            <input type="text" placeholder="Put Start date here" class="date" id="date_pickerStart" name="pickerStart"/>
            <input type="text" placeholder="Put End date here" class="date" id="date_pickerEnd" name="pickerEnd"/>
            -->
            <input type="text" placeholder="Put Start date here" class="date" id="date_pickerStart" name="start"/>
            <input type="text" placeholder="Put End date here" class="date" id="date_pickerEnd" name="end"/>
        </div>
            <button class="btn btn-success" type="submit" name="addNotice">Add</button>
    </div>

    <div class="editform-group" style="display:none;">
        <input type="hidden" name="noticeID" value="{{id}}">
        <div class="form-group" >
            <div class="iconlist" style="display:inline;">
                {{#each data}}
                    {{#if this.picid}}
                        <div class="pic" style="display:none;">
                            <img src="{{this.icon}}" id="addpic{{this.picid}} " >   
                        </div>  
                    {{/if}}              
                {{/each}}
            </div>

            <input type="text" class="form-control" name="text">
            <!--
            <input type="text" class="form-control" name="start">
            <input type="text" class="form-control" name="end">
            -->
            <input type="text" class="date" id="date_pickerStart" name="start"/>
            <input type="text" class="date" id="date_pickerEnd" name="end"/>
        </div>
        <div>
            <button class="btn btn-success" type="button" name="editNotice">Save</button>
            <button class="btn btn-success" type="button" name="cancelEdit">Cancel</button>
        </div>
    </div>
    
</form>